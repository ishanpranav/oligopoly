{
  "$schema": "http://json-schema.org/draft-06/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "savings": {
      "type": "integer",
      "minimum": 0
    },
    "salary": {
      "type": "integer"
    },
    "bail": {
      "type": "integer",
      "minimum": 0
    }
    "mortgageLoanProportion": {
      "type": "number",
      "minimum": 0
    },
    "mortgageInterestRate": {
      "type": "number",
      "minimum": 0
    },
    "railroadCost": {
      "type": "integer",
      "minimum": 1
    },
    "utilityCost": {
      "type": "integer",
      "minimum": 1
    },
    "speedLimit": {
      "type": "integer",
      "minimum": 1
    },
    "sentence": {
      "type": "integer",
      "minimum": 1
    },
    "squares": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [ "$type" ],
        "additionalProperties": false,
        "properties": {
          "$type": {
            "type": "string",
            "enum": [
              "none",
              "card",
              "jail",
              "police",
              "railroad",
              "street",
              "tax",
              "utility"
            ]
          },
          "name": {
            "type": "string"
          },
          "deck": {
            "type": "integer",
            "minimum": 1
          },
          "cost": {
            "type": "integer",
            "minimum": 1
          },
          "amount": {
            "type": "integer",
            "minimum": 1
          },
          "rents": {
            "type": "array",
            "items": [
              {
                "type": "integer",
                "minimum": 1
              }
            ],
            "minLength": 1
          },
          "group": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "groups": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "improvementCost"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "improvementCost": {
            "type": "integer"
          }
        }
      }
    },
    "decks": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "cards"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "cards": {
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "$type"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "$type": {
                  "type": "string",
                  "enum": [
                    "jailbreak",
                    "police",
                    "railroad",
                    "advance",
                    "repair",
                    "travel",
                    "utility",
                    "tax",
                    "pool"
                  ]
                },
                "amount": {
                  "type": "integer"
                },
                "destination": {
                  "type": "integer",
                  "minimum": 1
                },
                "distance": {
                  "type": "integer"
                },
                "houseCost": {
                  "type": "integer",
                  "minimum": 0
                },
                "hotelCost": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  }
}
